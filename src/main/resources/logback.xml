<configuration>
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
  <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

  <appender name="APPLICATION" class="ch.qos.logback.core.FileAppender">
    <file>logs/application.log</file>
    <append>true</append>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="MONITORING" class="ch.qos.logback.core.FileAppender">
    <file>logs/monitoring.log</file>
    <append>true</append>
    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <logger name="com.netcetera.example.application.monitoring.LogCreator" level="INFO" additivity="false">
    <appender-ref ref="MONITORING"/>
  </logger>
  <root level="INFO">
    <appender-ref ref="APPLICATION"/>
    <appender-ref ref="CONSOLE" additivity="false"/>
  </root>
</configuration>
